<Window x:Class="EF227_Demo.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EF227_Demo"
        mc:Ignorable="d"
        Title="AddPatientWindow" Height="350" Width="450">
    <StackPanel Width="400">
        <TextBlock Text="ФИО:"/>
        <TextBox Text="{Binding PatientName}"/>
        <TextBlock Text="Дата рождения:"/>
        <DatePicker SelectedDate="{Binding DateOfBirth, Mode=TwoWay}"/>
        <TextBlock Text="Телефон:"/>
        <TextBox Text="{Binding Phone}"/>
        <TextBlock Text="Адрес:"/>
        <TextBox Text="{Binding Adress}"/>
        <TextBlock Text="Полис:"/>
        <TextBox Text="{Binding Polis}"/>

        <Button Content="Добавить" Margin="10" Click="Save_Click"/>
        <Button Content="Отмена" Margin="10" Click="Cancel_Click"/>

    </StackPanel>
</Window>
