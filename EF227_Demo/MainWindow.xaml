<Window x:Class="EF227_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EF227_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid x:Name="PatTable" Height="300"
                  AutoGenerateColumns="True" Margin="10"/>

        <StackPanel Orientation="Horizontal">
            <Button Content="Добавить" Width="200" Margin="10"/>
            <Button Content="Удалить" Width="200" Margin="10" Click="Delete_Click"/>
            <Button Content="Изменть" Width="200" Margin="10" Click="Save_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
